<%- include("../partials/header.ejs") %>
<link rel="stylesheet" href="../public/bootstrap.min.css">
  <div class="container p-4">
    <div class="card p-3">
      <div class="card-header">
        <div class="mt-3" align="center">
          <p style="font-size:30px;">View Attendance</p>
        </div>
        <h4><%= event.name %>, <%= event.date.toDateString() %> (<%= event.stime %> - <%= event.etime %>)</h4>
        <a class="btn btn-primary float-right m-2" href="/medapp-attendance-admin/dashboard">Back to Dashboard</a>
        <a class="btn btn-primary float-right m-2" href="/medapp-attendance-admin/logout">Logout</a>
      </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Employee Name</th>
              <th scope="col">Email</th>
              <th scope="col">Designation</th>
              <th scope="col">Department</th>
              <th scope="col">Time</th>
              <th scope="col">Avatar</th>
            </tr>
          </thead>
          <tbody>
            <% if(event.attendances.length > 0) { %>
              <% event.attendances.forEach((attendance) => { %>
                <tr class="table-primary">
                  <td><%= attendance.employee.name %></td>
                  <td><%= attendance.employee.email %></td>
                  <td><%= attendance.employee.designation || "Nil" %></td>
                  <td><%= attendance.employee.department || "Nil" %></td>
                  <td><%= attendance.date.toLocaleString() %></td>
                  <td><a href="/medapp-attendance-admin/employee/avatar?emp=<%= attendance.employee._id %>"><img src="/medapp-attendance-admin/employee/avatar?emp=<%= attendance.employee._id %>" style="width: 100px"></a></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
       </div>
      </div>
    </div>
  </div>
  <div>
  </div>
<%- include("../partials/footer.ejs") %>
